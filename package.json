{
  "name": "repo-lockdown",
  "version": "1.0.3",
  "description": "A GitHub App built with Probot that closes and locks new and existing issues or pull requests.",
  "author": "Armin Sebastian",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/dessant/repo-lockdown-app.git",
    "type": "git"
  },
  "bugs": "https://github.com/dessant/repo-lockdown-app/issues",
  "main": "src/index.js",
  "scripts": {
    "start": "probot run ./src/index.js",
    "watch": "nodemon --exec 'yarn run start'",
    "update": "ncu --upgrade",
    "push": "git push --follow-tags origin master",
    "release": "standard-version"
  },
  "files": [
    "docs",
    "src"
  ],
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "lodash.uniqby": "^4.7.0",
    "probot": "^9.6.0",
    "probot-messages": "^1.0.1",
    "probot-scheduler": "dessant/scheduler#cbb84f6",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "1.19.4",
    "npm-check-updates": "^3.1.25",
    "prettier": "^1.18.2",
    "smee-client": "^1.1.0",
    "standard-version": "^7.0.0"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "keywords": [
    "github",
    "issues",
    "pull requests",
    "lock",
    "close",
    "fork",
    "mirror",
    "automation",
    "github app",
    "probot",
    "probot app",
    "bot"
  ],
  "resolutions": {
    "**/@octokit/endpoint": "^5.3.6"
  }
}
